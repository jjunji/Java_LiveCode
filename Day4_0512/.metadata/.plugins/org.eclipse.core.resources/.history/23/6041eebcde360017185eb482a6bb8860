package com.jihoon.java.draw;

public class DrawMain {

	public static void main(String[] args) {
		
		DrawMain main = new DrawMain();
		
		main.drawRect("A", 5);  //1
		main.drawTri("A", 5);   //2 
		main.drawTri_reverse("A", 5); //3
		main.drawTri2("A", 5);
		
	}
	
	// 입력받은 문자 한개를 세로 개수를 지정해서 출력하시오.
	/* 'A' , 5
	 *  AAAAA
	 *  AAAAA
	 *  AAAAA
	 *  AAAAA
	 *  AAAAA
	 */
	
	public void drawRect(String mark, int count){
		
		for( int i=0; i < count; i++){
			for( int j=0; j < count; j++){
				System.out.print(mark);
			}
			System.out.println("");
		}
		System.out.println();
	}
	
	public void drawTri(String mark, int count){
		for( int i=0; i < count; i++){
			for( int j=0; j <= i; j++){
				System.out.print(mark);
			}
			System.out.println("");
		}
		System.out.println();
	}
	
	//3
	/*     A   1 = 4, 1
	 *    AA   2 = 3, 2
	 *   AAA   3 = 2, 3
	 *  AAAA   4 = 1, 4
	 * AAAAA   5 = 0, 5
	 */
	
	// 큰 for문 안에 작은 for문 2개로 해결가능, if문으로도 해결 가능.
/*	public void drawTri_reverse(String mark, int count){
		for( int i=5; i > 0; i--){
			for( int j=0; j < i; j++){
				System.out.print(" ");
			}
			System.out.println(mark);
		}
		System.out.println();
	}*/
	
	public void drawTri_reverse(String mark, int count){
		for(int i = count; i > 0; i--){
			
			for(int j=0; j < count; j++){
	
				if(j<i-1){
					System.out.print(" "); // "  " 안에 j를 넣고 밑에 ""+i 를 넣고 출려해봄으로써 디버깅 가능.
				}else{					   //                        -> 무슨 역할 하는지 한눈에 보임
					System.out.print(mark);
				}
			}
			System.out.println(""+i);  // +i 
		}
		System.out.println("");
	}
	
	
	public void drawTri2(String mark, int count){
		for( int i=count-1; i >= 0; i--){
			for( int j=0; j < i; j++){
				System.out.print(" ");
			}
			for(int k = i; k <= (8-i); k++){
				System.out.print(mark);
			}
			System.out.println();
		}
		System.out.println();
	}
	
	public void drawTri3(String mark, int count){
		for( int i=count-1; i >= 0; i--){
			for( int j=0; j < i; j++){
				System.out.print(" ");
			}
			for(int k = i; k <= (count*2-i); k++){
				
				System.out.print(mark);
			}
			System.out.println();
		}
		System.out.println();
	}
	
	
	
	
	
	
	
}
