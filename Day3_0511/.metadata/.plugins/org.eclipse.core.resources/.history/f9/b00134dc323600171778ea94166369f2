package com.jihoon.java.array;

public class ArrayMain {

	public static void main(String[] args) {
	
		// 배열을 초기화 하는 2가지 방법.
		
		int arr[] = new int[10];
		int arr2[] = {1,2,3,4,5};
		
		/*   확장된 for문   */
		for( int a : arr ){
			System.out.print(a);  // 0이 10개 출력된다. -> 값을 지정해 주지 않으면 default 값인 0으로 초기화.
		}
		
		System.out.println();
		
		for( int a : arr2 ){
			System.out.print(a);
		}
		
		System.out.println();
		
		// ArraySub클래스를 배열로
		ArraySub subs[] = new ArraySub[10];
		
		// subs[0] = new ArraySub(); 과 같이 값을 정해주지 않으면 에러. (NullPointerException)
		// NullPointerException : 크기만 지정하고 값이 없는 경우 발생.
		subs[0] = new ArraySub();  
		subs[1] = new ArraySub();
		subs[2] = new ArraySub();  
		subs[3] = new ArraySub();  
		subs[4] = new ArraySub();  
		subs[5] = new ArraySub();  
		subs[6] = new ArraySub();  
		subs[7] = new ArraySub();  
		subs[8] = new ArraySub(); 
		subs[9] = new ArraySub();
		
		for( ArraySub sub : subs ){
			System.out.print(sub.a);
		}

	}
}